<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%= link_to 'Home', root_path %>
      <% if !current_user %>
      <%= link_to 'Sign Up', new_user_registration_path  %>
      <%= link_to 'Sign In', new_user_session_path  %>


      <% else %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: 'delete' %>
      <%= link_to 'Edit/Delete Account', edit_user_registration_path %>
      <%= link_to 'Add a Product', new_product_path %>
      <%= link_to 'All Products', products_path %>
      <%= link_to 'My Cart', cart_path %>
      <h3>Cart Total: <%= number_to_currency current_order.total_price %></h3>
      <h3>Number of Items:<%= @order_items.length %></h3>




      <% end %>

    <%= yield %>
  </body>
</html>
